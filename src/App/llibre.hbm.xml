<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="App">
	<class name="Llibre" table="llibre">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="titol" type="string" column="titol"/>
		<property name="autor" type="string" column="autor"/>
		<property name="anyNaiximent" type="string" column="anyNaiximent"/>
		<property name="anyPublicacio" type="string" column="anyPublicacio"/>
		<property name="editorial" type="string" column="editorial"/>
		<property name="nombrePagines" type="string" column="nombrePagines"/>
	</class>
</hibernate-mapping>